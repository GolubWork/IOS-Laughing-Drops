org, repo             = (ENV["GITHUB_REPOSITORY"] || "").split("/")
match_org, match_repo = (ENV["MATCH_REPOSITORY"]  || "").split("/")

platform :ios do
  lane :init_ci do
    UI.message "üîß INIT_CI: org=#{org}, repo=#{repo}, match_org=#{match_org}, match_repo=#{match_repo}"
    github_action(
      api_token:  ENV["GH_PAT"],
      org:        org,
      repo:       repo,
      match_org:  match_org,
      match_repo: match_repo,
      writable_deploy_key: true
    )
  end

lane :sync_certificates do
  UI.message "üîê SYNC_CERTIFICATES: start"
  UI.message "üîê API KEY ID: #{ENV["APPSTORE_KEY_ID"]}"
  UI.message "üîê ISSUER ID: #{ENV["APPSTORE_ISSUER_ID"]}"

  app_store_connect_api_key(
    key_id:      ENV["APPSTORE_KEY_ID"],
    issuer_id:   ENV["APPSTORE_ISSUER_ID"],
    key_content: ENV["APPSTORE_P8"]
  )

  main_app_bundle_id = ENV["IOS_BUNDLE_ID"]
  extension_bundle_id = "#{ENV["IOS_BUNDLE_ID"]}.backgroundnotifications"
  UI.message "üîê MAIN BUNDLE: #{main_app_bundle_id}"
  UI.message "üîê EXT BUNDLE: #{extension_bundle_id}"

  begin
    match(
      type: "appstore",
      storage_mode: "git",
      git_url: "git@github.com:#{match_org}/#{match_repo}.git",
      app_identifier: [main_app_bundle_id, extension_bundle_id],
      readonly: false
    )
  rescue => e
    UI.important("‚ö†Ô∏è Failed to sync certificates, trying to recreate...")
    match(
      type: "appstore",
      storage_mode: "git",
      git_url: "git@github.com:#{match_org}/#{match_repo}.git",
      app_identifier: [main_app_bundle_id, extension_bundle_id],
      readonly: false,
      force_for_new_devices: true
    )
  end

  UI.message "üîê SYNC_CERTIFICATES: done"
end


  lane :build do
    UI.message "üöÄ BUILD STARTED"
    setup_ci

    UI.message "üîß Calling sync_certificates"
    sync_certificates

    UI.message "üìÇ Running ls -la"
    sh("ls -la")

    UI.message "üì¶ Running Cocoapods"
    cocoapods(clean_install: true)

    UI.message "üîç Parsing ENV for paths"
    scheme          = (ENV["IOS_SCHEME"] || ENV["PROJECT_NAME"]).to_s.strip
    workspace_input = (ENV["XCODE_WORKSPACE"] || "").to_s.strip
    project_input   = (ENV["XCODE_PROJECT"]   || "").to_s.strip
    project_input   = "#{ENV["PROJECT_NAME"]}.xcodeproj" if project_input.empty? && !ENV["PROJECT_NAME"].to_s.empty?

    UI.message "üîç scheme=#{scheme}"
    UI.message "üîç workspace_input=#{workspace_input}"
    UI.message "üîç project_input=#{project_input}"

    repo_root = File.expand_path("..", __dir__)
    UI.message "üìÅ repo_root=#{repo_root}"

    workspace_path = workspace_input.empty? ? nil : File.expand_path(workspace_input, repo_root)
    project_path   = project_input.empty?   ? nil : File.expand_path(project_input,   repo_root)

    UI.message "üß≠ Calculated workspace_path=#{workspace_path}"
    UI.message "üß≠ Calculated project_path=#{project_path}"

    if workspace_path.nil? && project_path.nil?
      UI.message "üîé Searching for workspace/project in repo_root"
      found_ws = Dir[File.join(repo_root, "*.xcworkspace")].first
      found_pr = Dir[File.join(repo_root, "*.xcodeproj")].first
      UI.message "üîé found_ws=#{found_ws}"
      UI.message "üîé found_pr=#{found_pr}"
      workspace_path = found_ws if found_ws
      project_path   = found_pr if found_pr
    end

    UI.message "üìå Final workspace_path=#{workspace_path}"
    UI.message "üìå Final project_path=#{project_path}"

    UI.user_error!("‚ùå –ù–µ –Ω–∞–π–¥–µ–Ω workspace –∏–ª–∏ project") if workspace_path.nil? && project_path.nil?
    UI.user_error!("‚ùå –ù–µ —É–∫–∞–∑–∞–Ω–∞ —Å—Ö–µ–º–∞") if scheme.empty?

    UI.message "üìÇ Using scheme: #{scheme}"
    UI.message "üìÇ Using workspace: #{workspace_path}" if workspace_path
    UI.message "üìÇ Using project: #{project_path}" if project_path

    # ==== –∞–≤—Ç–æ–∏–Ω–∫—Ä–µ–º–µ–Ω—Ç CFBundleVersion ====
    UI.message "üßÆ Auto-increment CFBundleVersion start"
    main_bundle = ENV["IOS_BUNDLE_ID"]
    UI.message "üßÆ main_bundle=#{main_bundle}"

    api_key_hash = {
      key_id: ENV["APPSTORE_KEY_ID"],
      issuer_id: ENV["APPSTORE_ISSUER_ID"],
      key_content: ENV["APPSTORE_P8"]
    }

    latest_store_build = (
      begin
        UI.message "üßÆ Requesting App Store build number..."
        app_store_build_number(app_identifier: main_bundle, api_key: api_key_hash)
      rescue => e
        UI.message "‚ö†Ô∏è Failed to fetch store build number: #{e}"
        0
      end
    ).to_i

    ci_build   = ENV["BUILD_NUMBER"].to_i
    next_build = [latest_store_build + 1, ci_build, 1].max

    UI.message "üßÆ latest_store_build=#{latest_store_build}"
    UI.message "üßÆ ci_build=#{ci_build}"
    UI.message "üßÆ next_build=#{next_build}"

    UI.message "üßÆ Updating Info.plist and xcodeproj"
    auto_xcodeproj = project_path || Dir[File.join(repo_root, "*.xcodeproj")].first
    UI.message "üßÆ auto_xcodeproj=#{auto_xcodeproj}"

    main_info_plist = Dir[File.join(repo_root, "LaughingDrops", "LaughingDrops", "GoogleService-Info.plist")].first
    UI.message "üßÆ main_info_plist=#{main_info_plist}"

    if auto_xcodeproj && File.exist?(auto_xcodeproj)
      UI.message "üßÆ increment_build_number -> #{next_build}"
      increment_build_number(xcodeproj: auto_xcodeproj, build_number: next_build)
      if main_info_plist && File.exist?(main_info_plist)
        UI.message "üßÆ updating main_info_plist CFBundleVersion"
        set_info_plist_value(path: main_info_plist, key: "CFBundleVersion", value: next_build.to_s)
      end
    end

    ext_info_plist = Dir[File.join(repo_root, "backgroundnotifications", "**/GoogleService-Info.plist")].first
    UI.message "üßÆ ext_info_plist=#{ext_info_plist}"

    if ext_info_plist && File.exist?(ext_info_plist)
      UI.message "üßÆ updating ext_info_plist CFBundleVersion"
      set_info_plist_value(path: ext_info_plist, key: "CFBundleVersion", value: next_build.to_s)
    end

    # ==== –∫–æ–Ω–µ—Ü –∞–≤—Ç–æ–∏–Ω–∫—Ä–µ–º–µ–Ω—Ç–∞ ====

    UI.message "üîè Preparing code signing"
    ext_bundle   = "#{main_bundle}.backgroundnotifications"
    main_team_id = ENV["sigh_#{main_bundle}_appstore_team-id"]
    main_profile = ENV["sigh_#{main_bundle}_appstore_profile-name"]
    ext_profile  = ENV["sigh_#{ext_bundle}_appstore_profile-name"]

    UI.message "üîè main_team_id=#{main_team_id}"
    UI.message "üîè main_profile=#{main_profile}"
    UI.message "üîè ext_profile=#{ext_profile}"

    main_target  = ENV["IOS_MAIN_TARGET"].to_s.empty? ? scheme : ENV["IOS_MAIN_TARGET"]
    notif_target = ENV["IOS_NOTIF_TARGET"].to_s.empty? ? "backgroundnotifications" : ENV["IOS_NOTIF_TARGET"]

    UI.message "üéØ main_target=#{main_target}"
    UI.message "üéØ notif_target=#{notif_target}"

    UI.message "üîß Updating code signing settings"
    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: main_team_id,
      code_sign_identity: "Apple Distribution",
      path: workspace_path,
      targets: main_target,
      profile_name: main_profile
    )

    update_code_signing_settings(
      use_automatic_signing: false,
      team_id: main_team_id,
      code_sign_identity: "Apple Distribution",
      path: workspace_path,
      targets: notif_target,
      profile_name: ext_profile
    )

    provisioning_profiles = {}
    provisioning_profiles[main_bundle] = main_profile
    provisioning_profiles[ext_bundle]  = ext_profile

    UI.message "üì¶ provisioningProfiles=#{provisioning_profiles}"

    ipa_output_dir = File.join(repo_root, "build/iOS/ipa_out")
    UI.message "üì¶ ipa_output_dir=#{ipa_output_dir}"

    UI.message "üîç Searching for .xcworkspace explicitly"
    workspace_path = Dir[File.join(repo_root, "**/*.xcworkspace")].reject { |p| p.include?(".xcodeproj/") }.first
    project_path = Dir[File.join(repo_root, "**/*.xcodeproj")].first if workspace_path.nil?
    workspaceOrProject = workspace_path ? workspace_path : project_path


UI.message "‚öôÔ∏è Fastlane iOS Build Started"

# –ü—Ä–æ–≤–µ—Ä–∫–∞ –≤–µ—Ä—Å–∏–∏ Xcode
xcode_version = `xcode-select -p`.strip
UI.message "üõ†Ô∏è Xcode path: #{xcode_version}"

xcode_build_version = `xcodebuild -version`.strip
UI.message "üõ†Ô∏è Xcode version info:\n#{xcode_build_version}"

# –û—á–∏—Å—Ç–∫–∞ DerivedData
UI.message "üßπ Cleaning DerivedData..."
derived_data_path = "~/Library/Developer/Xcode/DerivedData"
sh("rm -rf #{derived_data_path}")
UI.message "‚úÖ DerivedData cleaned"

# –¢–∞–π–º–∞—É—Ç –∏ –ø–æ–≤—Ç–æ—Ä–Ω—ã–µ –ø–æ–ø—ã—Ç–∫–∏ –¥–ª—è xcodebuild
ENV["FASTLANE_XCODEBUILD_SETTINGS_TIMEOUT"] = "120"
ENV["FASTLANE_XCODEBUILD_SETTINGS_RETRIES"] = "3"

UI.message "‚öôÔ∏è Cleaning pods"
rm -rf ~/Library/Developer/Xcode/DerivedData
rm -rf Pods
rm -rf Podfile.lock
pod install

ENV["SWIFT_OPTIMIZATION_LEVEL"] = "-Onone"

UI.message "üèóÔ∏è Starting build_app..."

build_app(
  workspace: workspace_path,
  scheme: scheme,
  configuration: "Release",
  clean: true,
  export_method: "app-store",
  verbose: true,                       # –ø–æ–¥—Ä–æ–±–Ω—ã–π –ª–æ–≥
  build_path: "./build",
  xcargs: "ONLY_ACTIVE_ARCH=NO ENABLE_BITCODE=NO -showBuildTimingSummary" # –ø–æ–∫–∞–∑–∞—Ç—å —Ç–∞–π–º–∏–Ω–≥–∏ –∏ —Å–±–æ—Ä–∫—É –≤—Å–µ—Ö –∞—Ä—Ö–∏—Ç–µ–∫—Ç—É—Ä
)


UI.message "‚úÖ build_app finished"

UI.message "‚úÖ build_app finished"



    UI.message "üîë Setting up ASC API key again before upload"
    app_store_connect_api_key(
      key_id:      ENV["APPSTORE_KEY_ID"],
      issuer_id:   ENV["APPSTORE_ISSUER_ID"],
      key_content: ENV["APPSTORE_P8"]
    )

    ipa_path = Dir[File.join(ipa_output_dir, "*.ipa")].first
    UI.message "üì¶ ipa_path=#{ipa_path}"
    UI.user_error!("‚ùå IPA –Ω–µ –Ω–∞–π–¥–µ–Ω!") if ipa_path.nil?

    if ENV["UPLOAD_TO_TESTFLIGHT"] == "1" || ENV["UPLOAD_CHANNEL"] == "beta"
      UI.message "üöÄ Uploading to TestFlight"
      upload_to_testflight(
        ipa: ipa_path,
        skip_waiting_for_build_processing: true,
        changelog: (ENV["CHANGELOG"] || "Auto-upload from CI")
      )
    else
      UI.message "üöÄ Uploading to App Store"
      upload_to_app_store(
        ipa: ipa_path,
        submit_for_review: false,
        automatic_release: false,
        force: true,
        skip_screenshots: true,
        skip_metadata: true,
        run_precheck_before_submit: false,
        app_identifier: ENV["IOS_BUNDLE_ID"]
      )
    end

    UI.success("üéâ –ë–∏–ª–¥ –∑–∞–≥—Ä—É–∂–µ–Ω –≤ App Store Connect!")
  end
end
