platform :ios, '11.0'

target 'LaughingDrops' do
  use_frameworks!
  pod 'AppsFlyerFramework'
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
  pod 'Firebase/RemoteConfig'
  
  # Notification Service Extension target
  target 'notifications' do
    inherit! :search_paths
    pod 'Firebase/Messaging'
  end
end